<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/test_area_padding"
    tools:context="com.alibaba.android.arouter.demo.testfragment.TestTargetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_test_area"
        android:orientation="vertical">

        <Button
            android:id="@+id/finish_result_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置 RESULT_OK 并关闭Activity" />

        <Button
            android:id="@+id/finish_result_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置 RESULT_CANCEL 并关闭Activity" />

        <Button
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="直接关闭Activity" />

    </LinearLayout>

</LinearLayout>
